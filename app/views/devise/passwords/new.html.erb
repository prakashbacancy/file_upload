<section class="login-section section-padding">
  <div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'shadow login-box mx-auto text-center' }) do |f| %>
      <%= image_tag "logo-dark.png", class: 'logo' %>
      <h1 class="h4 login-title">Forgot Password</h1>
      <div class="form-group text-start">
        <label>Email ID</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <%= f.submit "Submit", class: 'btn btn-primary btn-block w-100 py-2 mt-4' %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <h6 class="fw-normal account-text">
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-primary py-2' %><br />
        </h6>
      <% end %>
      <hr />
      <div class="text-center">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
             <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: "text-icon-link text-black mt-4 justify-content-center" do %>
    Sign In With Azure<%= image_tag("azure.png", alt: "azure logo", class: "icon") %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<script type="text/javascript">
  $(function () { $('input').blur(); });
</script>
